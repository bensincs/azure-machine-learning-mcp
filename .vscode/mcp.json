{
  "servers": {
    "azure-ml-mcp": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "--env",
        "AZURE_AUTH_METHOD=cli",
        "--env",
        "PATH=/usr/local/bin:/usr/bin:/bin",
        "--volume",
        "/Users/bensinclair/.azure:/root/.azure:ro",
        "--volume",
        "/Users/bensinclair/.azure:/home/appuser/.azure:ro",
        "ghcr.io/bensincs/azure-machine-learning-mcp:latest"
      ],
      "env": {
        "_comment": "Azure credentials are mounted as volumes into the container"
      }
    }
  },
  "inputs": []
}